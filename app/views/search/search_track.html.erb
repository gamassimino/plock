<h1>Track Search</h1>

<%= form_for search_track_path, method: :get do |f| %>
  <p>
    <%= f.label "Search for" %>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag "search", name: nil %>
  </p>
<% end %>

<ul>
  <% @track.each do |track| %>
    <li>
      <h3>
        <%= link_to track.name, controller: "tracks", action: "show", id: track._id%>
      </h3>
    </li>
  <% end %>
</ul>